<p id="notice"><%= notice %></p>

<h1>Moje książki</h1>

 <table class="table table-striped">
  <thead>
    <tr>
      <th>Autor</th>
      <th>Tytuł</th>
      <th>Opis</th>
      <th>Wypożyczona przez</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mybooks.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= book.name %></td>
        <td><%= book.description %></td>
        <% if book.rent_by == nil %>
        <td>wolna</td>
        <% else%>
        <td><%= book.rent_by.email %></td>
        <% end %>
        <td><%= link_to 'Pokaż', book %></td>
        <td><%= link_to 'Eytuj', edit_book_path(book) %></td>
        <td><%= link_to 'Usuń', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



