<h1>Wyniki wyszukiwania</h1>
<%= link_to 'Powrót', new_search_path %>
<% if @search.search_books.empty? %>
	<p>Nie znaleziono ksiązek spełniajacych kryteria wyszukiwania</p>
<% else %>
	 <table class="table table-striped">
  <thead>
    <tr>
      <th>Autor</th>
      <th>Tytuł</th>
      <th>Kategoria</th>
      <th>Własciciel</th>
      <th>Wypozyczona przez</th>
  
    </tr>
  </thead>
	


  <tbody>
  <% @search.search_books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= link_to book.name, book %></td>
        <td><%= book.category %></td>
        <td><%= book.owner.email %></td>
             <% if book.rent_by == nil %>
        <td>wolna</td>
        <% else%>
            <td><%= book.rent_by.email %></td>
        <% end %>
     
      </tr>
 <% end %>
  </tbody>
</table>
<% end %>
